<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ptapp.activity.EducatorGroupMsgActivity">

    <FrameLayout
        android:id="@+id/msgs_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_item_msg_margin_bottom">

        <ListView
            android:id="@+id/list_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@color/Transparent"
            android:divider="@color/Transparent" />
        <!--hides clickable effect-->
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <!--Send To bar-->
        <LinearLayout
            android:id="@+id/send_to_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:background="@color/navdrawer_background"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_to"
                android:textSize="@dimen/list_item_msg_text_size"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_height="30dp"
                android:background="@color/theme_accent_3"
                android:layout_gravity="bottom|center"
                android:layout_marginRight="10dp"
                android:layout_width="30dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?photoItemForeground"
                    android:text="S"
                    android:textColor="@color/navdrawer_background"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="@integer/font_textStyle_medium"
                    android:fontFamily="@string/font_fontFamily_medium"
                    android:textAllCaps="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="30dp"
                android:background="@color/theme_primary"
                android:layout_gravity="bottom|center"
                android:layout_marginRight="10dp"
                android:layout_width="30dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?photoItemForeground"
                    android:text="F"
                    android:textColor="@color/navdrawer_background"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="@integer/font_textStyle_medium"
                    android:fontFamily="@string/font_fontFamily_medium"
                    android:textAllCaps="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="30dp"
                android:background="@color/theme_primary"
                android:layout_gravity="bottom|center"
                android:layout_marginRight="10dp"
                android:layout_width="30dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?photoItemForeground"
                    android:text="M"
                    android:textColor="@color/navdrawer_background"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="@integer/font_textStyle_medium"
                    android:fontFamily="@string/font_fontFamily_medium"
                    android:textAllCaps="true" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/navdrawer_background">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_email"
                android:layout_marginRight="10dp" />

            <EditText
                android:id="@+id/type_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/list_item_msg_text_size"
                android:hint="@string/hint_type_msg"
                android:layout_marginRight="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_send_now" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
