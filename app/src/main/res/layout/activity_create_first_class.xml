<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.ptapp.activity.CreateFirstClassActivity">

    <LinearLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingTop="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/center_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tuition Center/Institute Name"
                android:textColor="@color/theme_primary_light"
                android:textSize="@dimen/text_size_medium" />


            <AutoCompleteTextView
                android:id="@+id/et_center_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:textSize="@dimen/text_size_medium"
                android:hint="@string/hint_something" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/class_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Class Name"
                android:textColor="@color/theme_primary_light"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/et_class_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_medium"
                android:hint="@string/hint_class" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Teacher Name"
                android:textColor="@color/theme_primary_light"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/et_teacher_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_medium"
                android:hint="@string/hint_something" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text5"
            android:textColor="@color/body_text_3"
            android:textSize="@dimen/text_size_medium"
            android:paddingTop="20dp" />

        <LinearLayout
            android:layout_height="48dp"
            android:background="@color/theme_primary"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/continue_btn_text"
                android:background="?photoItemForeground"
                android:textColor="#8fff"
                android:textSize="@dimen/text_size_large"
                android:textStyle="@integer/font_textStyle_medium"
                android:fontFamily="@string/font_fontFamily_medium"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/YellowGreen"
        android:layout_gravity="bottom"
        android:layout_marginBottom="130dp"></View>


    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="@string/text6"
        android:textColor="@color/theme_primary_light"
        android:textSize="@dimen/text_size_medium"
        android:paddingBottom="70dp"
        android:layout_gravity="bottom|center_horizontal" />


    <LinearLayout
        android:layout_height="30dp"
        android:background="@color/theme_primary"
        android:layout_width="180dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/validate_btn"
            android:background="?photoItemForeground"
            android:textColor="#8fff"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="@integer/font_textStyle_medium"
            android:fontFamily="@string/font_fontFamily_medium"
            android:textAllCaps="false" />
    </LinearLayout>


</FrameLayout>
