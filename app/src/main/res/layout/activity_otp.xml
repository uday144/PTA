<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.ptapp.activity.OTPActivity">

    <LinearLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/receive_sms_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/otp_text"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/body_text_3"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/otp_text"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/body_text_3"
            android:textSize="@dimen/text_size_medium"
            android:paddingTop="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/otp_code"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/otp_char1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:inputType="number"
                    android:nextFocusRight="@+id/otp_char2"
                    android:maxLength="1"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/otp_char2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:inputType="number"
                    android:nextFocusRight="@+id/otp_char3"
                    android:maxLength="1"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/otp_char3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:inputType="number"
                    android:nextFocusRight="@+id/otp_char4"
                    android:maxLength="1"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/otp_char4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/otp_char5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/otp_char6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="44dp"
                android:background="@color/theme_primary"
                android:layout_width="match_parent"
                android:layout_weight=".4"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/btn_ok_text"
                    android:textAllCaps="true"
                    android:background="?photoItemForeground"
                    android:textColor="#8fff"
                    android:textStyle="@integer/font_textStyle_medium"
                    android:fontFamily="@string/font_fontFamily_medium"
                    android:onClick="onClickOtpOK" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible" />


    <LinearLayout
        android:id="@+id/success_section"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|center_horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/show_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_primary_light"
            android:textSize="@dimen/text_size_medium"
            android:paddingBottom="30dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/t_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_primary_light"
            android:textSize="@dimen/text_size_medium"
            android:paddingBottom="30dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/p_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_primary_light"
            android:textSize="@dimen/text_size_medium"
            android:paddingBottom="30dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/s_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_primary_light"
            android:textSize="@dimen/text_size_medium"
            android:paddingBottom="30dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/btn_continue"
            android:layout_height="48dp"
            android:background="@color/theme_primary"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/continue_btn_text"
                android:background="?photoItemForeground"
                android:textColor="#8fff"
                android:textSize="@dimen/text_size_large"
                android:textStyle="@integer/font_textStyle_medium"
                android:fontFamily="@string/font_fontFamily_medium"
                android:textAllCaps="false"
                android:onClick="onClickContinue" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>
