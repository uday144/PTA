<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ptapp.activity.EducatorEventsActivity">

    <!-- Main layout -->
    <com.ptapp.widget.DrawShadowFrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:background="#fff0f0f0"
        android:layout_height="match_parent"
        app:shadowDrawable="@drawable/header_shadow">

        <!-- Fragment showing the grid of events -->
        <fragment
            android:name="com.ptapp.activity.EducatorEventsFragment"
            android:id="@+id/events_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_educator_events" />

    </com.ptapp.widget.DrawShadowFrameLayout>>
    <!-- Nav drawer -->
    <include layout="@layout/navdrawer_for_ab_overlay" />

</android.support.v4.widget.DrawerLayout>
