<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.ptapp.activity.CreateFirstClassActivity">

    <LinearLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/center_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tuition Center/Institute Name"
                android:textColor="@color/theme_primary_light"
                android:textSize="@dimen/text_size_large" />

            <AutoCompleteTextView
                android:id="@+id/et_center_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:textSize="@dimen/text_size_large"
                android:hint="@string/hint_something" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/class_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Class Name"
                android:textColor="@color/theme_primary_light"
                android:textSize="@dimen/text_size_large" />

            <EditText
                android:id="@+id/et_class_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_large"
                android:hint="@string/hint_class" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subject_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:textColor="@color/theme_primary_light"
                android:textSize="@dimen/text_size_large" />

            <EditText
                android:id="@+id/et_subject_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_large"
                android:hint="@string/hint_subject" />
        </LinearLayout>

        <!--Teacher Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Teacher Name"
                android:textColor="@color/theme_primary_light"
                android:textSize="@dimen/text_size_large" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Spinner
                        android:id="@+id/spin_title"
                        android:layout_width="0dp"
                        android:layout_weight=".40"
                        android:layout_height="wrap_content"></Spinner>

                    <EditText
                        android:id="@+id/et_teacher_fname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".60"
                        android:hint="@string/hint_firstname" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_teacher_lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_large"
                    android:hint="@string/hint_lastname" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Class Title"
                android:textColor="@color/theme_primary_light"
                android:textSize="@dimen/text_size_large" />

            <EditText
                android:id="@+id/et_class_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_large"
                android:hint="@string/hint_class_title" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text5"
            android:textColor="@color/body_text_3"
            android:textSize="@dimen/text_size_large"
            android:paddingTop="40dp" />

        <LinearLayout
            android:layout_height="70dp"
            android:background="@color/theme_primary"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/continue_btn_text"
                android:background="?photoItemForeground"
                android:textColor="#8fff"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="@integer/font_textStyle_medium"
                android:fontFamily="@string/font_fontFamily_medium"
                android:textAllCaps="false"
                android:onClick="onClickContinue" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/YellowGreen"
        android:layout_marginTop="650dp"
        android:layout_gravity="top"></View>


    <TextView
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:text="@string/text6"
        android:textColor="@color/theme_primary_light"
        android:textSize="@dimen/text_size_large"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="700dp" />


    <LinearLayout
        android:layout_height="50dp"
        android:background="@color/theme_primary"
        android:layout_width="300dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="800dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/validate_btn"
            android:background="?photoItemForeground"
            android:textColor="#8fff"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="@integer/font_textStyle_medium"
            android:fontFamily="@string/font_fontFamily_medium"
            android:textAllCaps="false"
            android:onClick="onClickValidateNum" />
    </LinearLayout>


</FrameLayout>
